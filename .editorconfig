# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_style = tab
indent_size = 4

[*.xml]
indent_style = tab
indent_size = 4

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
